{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "outDir": "build",
    "noImplicitAny": false,
    "sourceMap": true,
    "declaration":false,
    "experimentalDecorators":true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "isolatedModules": false,
    "noLib": false,
    "suppressImplicitAnyIndexErrors": false,
    "lib": [
      "es6",
      "dom"
      ]
  },
  "exclude": [
    "node_modules"
  ]
}